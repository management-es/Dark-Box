<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para seleccionar la Fecha -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_fecha_gestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Tipo de Gestión -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Gestión">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_tipo_gestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textview_zona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zona"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- Spinner para seleccionar la Zona -->
    <Spinner
        android:id="@+id/spinner_zona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Campo para Descripción -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observaciones">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="4"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón para Guardar Gestión -->
    <Button
        android:id="@+id/button_guardar_gestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Gestión"
        android:layout_gravity="center" />

</LinearLayout>
