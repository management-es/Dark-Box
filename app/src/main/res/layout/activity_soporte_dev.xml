<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoporteDevActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/support"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Título de la página -->

    <TextView
        android:id="@+id/tvSoporteTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacto con desarrollador"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/animationView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <!-- Mostrar la zona del usuario -->
    <TextView
        android:id="@+id/tvZonaUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zona: "
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvSoporteTitulo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>

    <!-- Mostrar el rol del usuario -->
    <TextView
        android:id="@+id/tvRolUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rol: "
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvZonaUsuario"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>

    <!-- Mostrar el nombre del usuario -->
    <TextView
        android:id="@+id/tvNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario: "
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvRolUsuario"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"/>

    <!-- Campo para que el usuario ingrese la descripción del error -->
    <EditText
        android:id="@+id/etDescripcionError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Describe el problema"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minHeight="150dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreUsuario"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"/>

    <!-- Botón para enviar el informe -->
    <Button
        android:id="@+id/btnEnviarInforme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar informe"
        app:layout_constraintTop_toBottomOf="@id/etDescripcionError"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botón para navegar al formulario DevOpSuDo -->
    <Button
        android:id="@+id/btnDevOpSuDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DevOpSuDo"
        app:layout_constraintTop_toBottomOf="@id/btnEnviarInforme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
