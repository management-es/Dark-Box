<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Button to view client -->
    <Button
        android:id="@+id/btnVerCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Cliente" />

    <!-- Button to show additional options -->
    <Button
        android:id="@+id/button_ingresar_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar Cliente" />

    <!-- Hidden layout for additional options -->
    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Additional options UI elements go here -->

    </LinearLayout>
</LinearLayout>
