<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- New button to show input fields for entering new client -->
        <Button
            android:id="@+id/button_ingresar_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar Cliente" />

        <!-- Hidden layout for input fields -->
        <LinearLayout
            android:id="@+id/cliente_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <!-- AquÃ­ puedes agregar los campos de texto para ingresar los datos del cliente -->
            <TextView
                android:id="@+id/label_nombre_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:" />

            <EditText
                android:id="@+id/input_nombre_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Add more fields as needed -->

            <!-- Save button for new client -->
            <Button
                android:id="@+id/button_save_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>