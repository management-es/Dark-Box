<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    tools:context=".InformeAdapter">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título e información -->
        <TextView
            android:id="@+id/tvInformeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informe ID"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDescripcionInforme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción del informe"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvZonaInforme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zona"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvUsuarioInforme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>

        <!-- Botones -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Botón Realizado -->
            <Button
                android:id="@+id/btnRealizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Realizado"
                android:layout_weight="1"/>

            <!-- Botón Eliminar -->
            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
