<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Button to show input fields for entering new equipment -->
        <Button
            android:id="@+id/button_ingresar_equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar Equipo" />

        <!-- Hidden layout for input fields -->
        <LinearLayout
            android:id="@+id/equipment_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/label_equipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo:" />

            <Spinner
                android:id="@+id/input_equipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/label_serial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial:" />

            <EditText
                android:id="@+id/input_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/label_tecnologia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TecnologÃ­a:" />

            <EditText
                android:id="@+id/input_tecnologia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/label_modelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo:" />

            <EditText
                android:id="@+id/input_modelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/label_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:" />

            <Spinner
                android:id="@+id/input_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/label_observaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observaciones:" />

            <EditText
                android:id="@+id/input_observaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Save button for new equipment -->
            <Button
                android:id="@+id/button_save_equipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
