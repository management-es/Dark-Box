<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para seleccionar la Fecha -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Nombre del Cliente -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nombre_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Apellidos del Cliente -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellidos">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_apellidos_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Dirección del Cliente -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_direccion_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Coordenadas del Cliente -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Coordenadas">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_coordenadas_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Teléfono del Cliente -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teléfono">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_telefono_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Contactos del Cliente -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contactos">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_contactos_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo para Observaciones -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observaciones">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_observaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="4"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón para Guardar Solicitud -->
    <Button
        android:id="@+id/button_guardar_solicitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Solicitud"
        android:layout_gravity="center" />

</LinearLayout>
